<Page
    x:Class="Favor.MissionWrite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Favor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar Background="#FFFF8F3D">
            <AppBarButton x:Name="SaveButton" Icon="Accept" Label="Submit" Click="ButtonSave_Click"/>
            <AppBarButton Icon="Cancel" Label="Cancel" Click="AppBarButton_Click"/>
        </CommandBar>
    </Page.BottomAppBar>


    <Grid Background="#FFFF8F3D">
        <Grid HorizontalAlignment="Left" Height="85" Margin="0,0,0,495" VerticalAlignment="Bottom" Width="400" Background="#FFFF8F3D"/>
        <TextBox x:Name="TextInput" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="148" Background="#FFF9F0EC" Margin="10,10,0,0"/>
        <Button x:Name="PushingFriendButton" Content="pushing to friends" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" Width="380" Click="PushingFriendButton_Click"/>

    </Grid>
</Page>
